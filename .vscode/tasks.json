{
  "version": "2.0.0",
  "inputs": [
      {
          "id": "commitMessage",
          "type": "promptString",
          "description": "Enter your commit message"
      }
  ],
  "tasks": [
    {
        "label": "autocommit", 
        "type": "shell",
        "command": "bash",
        "args": [
            "-c",
            "git fetch && git add . && git commit -m '${input:commitMessage}' && git pull && git push && exit 0"
        ],
        "problemMatcher": [],
        "presentation": {
            "reveal": "never",
            "echo": false,
            "focus": false,
            "panel": "shared"
        }
    }
]
}
